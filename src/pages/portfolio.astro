---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import {Icon} from 'astro-icon/components';
---

<BaseLayout
	title="Portfolio"
	description="Showcase of my projects and work"
>
	<div class="section-container">
		<div class="max-w-3xl mb-12">
			<h1 class="heading-xl">My Portfolio</h1>
			<p class="paragraph">
				Welcome to my portfolio of selected works. Each project represents a unique challenge, solution, and learning experience. Browse through my work to see how I approach problem-solving in different contexts.
			</p>
		</div>

		<!-- Project Categories/Filters -->
		<div class="flex flex-wrap gap-2 mb-10">
			<button class="px-4 py-2 rounded-md bg-secondary-bg text-text-primary font-mono text-sm border-2 border-primary">
				All Projects
			</button>
			<button class="px-4 py-2 rounded-md bg-secondary-bg bg-opacity-50 text-text-secondary hover:text-primary hover:bg-opacity-100 transition-colors font-mono text-sm">
				Web Development
			</button>
			<button class="px-4 py-2 rounded-md bg-secondary-bg bg-opacity-50 text-text-secondary hover:text-primary hover:bg-opacity-100 transition-colors font-mono text-sm">
				UI/UX Design
			</button>
			<button class="px-4 py-2 rounded-md bg-secondary-bg bg-opacity-50 text-text-secondary hover:text-primary hover:bg-opacity-100 transition-colors font-mono text-sm">
				Mobile Apps
			</button>
		</div>
		
		<!-- Projects Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<ProjectCard
				title="E-commerce Platform"
				description="A fully responsive online shopping experience with cart functionality, user authentication, and secure payment processing."
				tags={["React", "Node.js", "MongoDB", "Stripe"]}
				image="/blog-placeholder-3.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
			
			<ProjectCard
				title="Portfolio Website"
				description="A modern portfolio showcasing my projects with accessible design and animations. Built with performance in mind."
				tags={["Astro", "Tailwind CSS", "TypeScript"]}
				image="/blog-placeholder-4.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
			
			<ProjectCard
				title="Task Management App"
				description="A productivity application that helps users organize tasks, set deadlines, and track progress on various projects."
				tags={["Vue", "Firebase", "Vuetify"]}
				image="/blog-placeholder-2.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
			
			<ProjectCard
				title="Weather Dashboard"
				description="A weather application providing real-time forecasts, interactive maps, and historical weather data visualization."
				tags={["React", "OpenWeather API", "Chart.js"]}
				image="/blog-placeholder-1.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
			
			<ProjectCard
				title="Fitness Tracker"
				description="A mobile-friendly application for tracking workouts, setting fitness goals, and monitoring progress with detailed analytics."
				tags={["React Native", "GraphQL", "Firebase"]}
				image="/blog-placeholder-5.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
			
			<ProjectCard
				title="Recipe Finder"
				description="A web app for discovering recipes based on available ingredients, dietary restrictions, and cuisine preferences."
				tags={["JavaScript", "Edamam API", "CSS Grid"]}
				image="/blog-placeholder-about.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
		</div>
		
		<!-- Contact CTA -->
		<div class="mt-16 text-center">
			<h2 class="heading-lg">Interested in working together?</h2>
			<p class="paragraph max-w-2xl mx-auto">
				I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.
			</p>
			<a href="/contact" class="btn-primary inline-flex items-center mt-4">
				Let's Talk 
				<Icon name="ph:chat-circle-text-duotone" class="ml-2 w-5 h-5" />
			</a>
		</div>
	</div>
</BaseLayout>

<style>
	.portfolio-container {
		margin: 2rem auto;
		width: 100%;
		max-width: 1200px;
	}
	
	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}
	
	.project-card {
		background-color: var(--color-bg-secondary);
		border-radius: 8px;
		padding: 2rem;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
		transition: var(--transition-standard);
		display: flex;
		flex-direction: column;
	}
	
	.project-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
	}
	
	.project-card h3 {
		margin-top: 0;
		margin-bottom: 1rem;
		color: var(--color-text-primary);
		border-bottom: 2px solid rgba(var(--gray-light), 0.2);
		padding-bottom: 0.5rem;
	}
	
	.project-card p {
		flex-grow: 1;
		color: var(--color-text-secondary);
		margin-bottom: 1.5rem;
	}
	
	.project-links {
		display: flex;
		gap: 1rem;
		margin-top: auto;
	}
	
	.project-links a {
		padding: 0.5rem 1rem;
		text-align: center;
		font-size: 0.9rem;
	}
	
	@media (max-width: 768px) {
		.projects-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
