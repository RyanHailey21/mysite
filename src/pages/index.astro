---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import {Icon} from 'astro-icon/components';
---

<BaseLayout>
	<Hero 
		title="Turning Ideas into Exceptional Digital Experiences"
		subtitle="I'm a developer passionate about crafting clean, accessible, and user-friendly websites that solve real problems."
		primaryCta={{ text: "View My Work", href: "/portfolio" }}
		secondaryCta={{ text: "Get In Touch", href: "/contact" }}
	/>
	
	<section class="section-container">
		<div class="flex items-center justify-between mb-8">
			<h2 class="heading-lg">Featured Projects</h2>
			<a href="/portfolio" class="text-primary hover:text-primary-hover transition-colors flex items-center gap-1 font-mono text-sm">
				View All
				<Icon name="ph:arrow-right" class="w-4 h-4" />
			</a>
		</div>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<ProjectCard
				title="E-commerce Platform"
				description="A modern online shopping experience with cart functionality, user authentication, and payment processing."
				tags={["React", "Node.js", "MongoDB", "Stripe"]}
				image="/blog-placeholder-3.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
			<ProjectCard
				title="Portfolio Website"
				description="A responsive portfolio website showcasing my skills and projects with a clean, accessible design."
				tags={["Astro", "Tailwind CSS", "TypeScript"]}
				image="/blog-placeholder-4.jpg"
				liveUrl="#"
				repoUrl="#"
			/>
		</div>
	</section>
	
	<section class="section-container">
		<div class="flex items-center justify-between mb-8">
			<h2 class="heading-lg">Latest Articles</h2>
			<a href="/blog" class="text-primary hover:text-primary-hover transition-colors flex items-center gap-1 font-mono text-sm">
				All Posts
				<Icon name="ph:arrow-right" class="w-4 h-4" />
			</a>
		</div>
		
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<article class="card-modern">
				<span class="text-xs text-text-muted font-mono mb-2 block">March 15, 2024</span>
				<h3 class="text-xl font-bold text-text-primary mb-2 hover:text-primary transition-colors">
					<a href="/blog/first-post">Best Practices for Modern Web Development</a>
				</h3>
				<p class="text-text-secondary line-clamp-2">
					Exploring the most effective approaches to building fast, accessible, and maintainable websites in today's landscape.
				</p>
			</article>
			
			<article class="card-modern">
				<span class="text-xs text-text-muted font-mono mb-2 block">February 28, 2024</span>
				<h3 class="text-xl font-bold text-text-primary mb-2 hover:text-primary transition-colors">
					<a href="/blog/second-post">Understanding CSS Grid Layout</a>
				</h3>
				<p class="text-text-secondary line-clamp-2">
					A comprehensive guide to mastering CSS Grid Layout for complex web designs with examples and best practices.
				</p>
			</article>
			
			<article class="card-modern">
				<span class="text-xs text-text-muted font-mono mb-2 block">February 10, 2024</span>
				<h3 class="text-xl font-bold text-text-primary mb-2 hover:text-primary transition-colors">
					<a href="/blog/third-post">Getting Started with Astro</a>
				</h3>
				<p class="text-text-secondary line-clamp-2">
					Learn how to build lightning-fast websites with Astro - the modern frontend framework for content-focused websites.
				</p>
			</article>
		</div>
	</section>
	
	<section class="section-container">
		<div class="card-modern bg-opacity-50 text-center py-16">
			<h2 class="heading-lg">Let's Work Together</h2>
			<p class="paragraph max-w-2xl mx-auto">
				Interested in collaborating on a project? I'm always open to discussing new opportunities and ideas.
			</p>
			<div class="flex justify-center gap-4 mt-6">
				<a href="/contact" class="btn-primary">
					Get in Touch
				</a>
				<a href="/portfolio" class="btn-outline">
					View My Work
				</a>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	.hero {
		background-color: var(--color-bg-secondary);
		padding: 4rem 2rem;
		border-radius: 12px;
		margin-bottom: 3rem;
		text-align: center;
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
	}
	
	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}
	
	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		color: var(--color-text-primary);
	}
	
	.intro {
		font-size: 1.4rem;
		color: var(--color-text-secondary);
		margin-bottom: 2rem;
		line-height: 1.6;
	}
	
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 1.5rem;
	}
	
	.cta-button {
		display: inline-block;
		padding: 0.8rem 1.6rem;
		border-radius: 6px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.2s ease;
	}
	
	.primary {
		background-color: var(--color-accent-primary);
		color: var(--color-bg-primary);
	}
	
	.primary:hover {
		background-color: var(--color-accent-secondary);
	}
	
	.secondary {
		background-color: transparent;
		color: var(--color-accent-primary);
		border: 2px solid var(--color-accent-primary);
	}
	
	.secondary:hover {
		background-color: rgba(76, 201, 240, 0.15);
		color: var(--color-accent-secondary);
		border-color: var(--color-accent-secondary);
	}
	
	section {
		margin-bottom: 3rem;
	}
	
	h2 {
		font-size: 2rem;
		margin-bottom: 1.5rem;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid rgba(var(--gray-light), 0.2);
		color: var(--color-text-primary);
	}
	
	.featured-grid, .posts-grid {
		display: grid;
		gap: 2rem;
	}
	
	.featured-grid {
		grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
	}
	
	.posts-grid {
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
	}
	
	.featured-item, .post-preview {
		background-color: var(--color-bg-secondary);
		padding: 2rem;
		border-radius: 8px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
		transition: transform 0.3s ease;
		color: var(--color-text-secondary);
		font-weight: 500;
	}
	
	.featured-item:hover, .post-preview:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
	}
	
	.view-all {
		margin-top: 2rem;
		text-align: center;
	}
	
	.view-all-link {
		color: var(--color-accent-primary);
		text-decoration: none;
		font-weight: 600;
		font-family: var(--font-family-code);
	}
	
	.view-all-link:hover {
		color: var(--color-accent-secondary);
		text-decoration: underline;
	}
	
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.cta-buttons {
			flex-direction: column;
			gap: 0.8rem;
		}
		
		h1 {
			font-size: 2.5rem;
		}
		
		.intro {
			font-size: 1.2rem;
		}
	}
</style>
